{
  "compilerOptions": {
    "module": "NodeNext",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "target": "es2023",
    "lib": ["es2023"],
    "pretty": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vitest/globals"]
  }
}
